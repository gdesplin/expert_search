.container
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .navbar-brand
      = link_to "Home", :root, class: "#{'active' if current_page? :root}"
    %button.navbar-toggler{ "aria-controls" => "navbarNav", "aria-expanded" => "false",
      "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", type: "button" }
      %span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNav
      %ul.navbar-nav.ml-auto
        %li.nav-item{ class: ("active" if current_page? %i[new expert]) }
          = link_to "New Expert", %i[new expert], class: "nav-link"